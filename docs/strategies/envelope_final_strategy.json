{
  "strategy_name": "Envelope_Final_Strategy_v2",
  "author": "Commander & Gemini",
  "description": "[v2 호환성 테스트] 엔벨로프 채널 돌파 및 추세 추종 전략. (v1 최종본의 v2 형식 변환)",
  "universe_filters": { "exclude": [] },
  "indicators": [
    { "name": "MA20", "type": "SMA", "params": { "source": "Close", "window": 20 }},
    { "name": "UpperBand", "type": "CALCULATION", "params": { "formula": "MA20 * 1.10" }},
    { "name": "LowerBand", "type": "CALCULATION", "params": { "formula": "MA20 * 0.90" }}
  ],
  "entry_rules": {
    "initial_entry": {
      "name": "Envelope_Breakout_Entry",
      "logic": "AND",
      "conditions": [
        { "left": "Close", "op": ">", "UpperBand" }
      ]
    }
  },
  "exit_rules": {
    "take_profit": { "name": "MA_Direction_Trail", "logic": "AND", "conditions": [] },
    "stop_loss": { "name": "Prev_Day_Low_Stop", "logic": "AND", "conditions": [] }
  },
  "optimization_config": {
    "enabled": true,
    "stop_loss_scenarios": [
      { "name": "Prev_Day_Low", "type": "PREV_DAY_LOW", "params": {} }
    ],
    "take_profit_config": {
        "enabled": true,
        "type": "MA_DIRECTION_TRAIL",
        "params": {
            "source": "Close",
            "window_range_start": 5,
            "window_range_end": 15,
            "step": 5
        }
    }
  }
}